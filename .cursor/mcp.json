{
  "mcpServers": {
    "github": {
      "command": "docker",
      "args": [
        "run",
        "-i",
        "--rm",
        "-e",
        "GITHUB_PERSONAL_ACCESS_TOKEN",
        "mcp/github"
      ],
      "env": {
        "GITHUB_PERSONAL_ACCESS_TOKEN": "${GITHUB_PERSONAL_ACCESS_TOKEN}"
      }
    },
    "notion": {
      "command": "docker",
      "args": [
        "run",
        "-i",
        "--rm",
        "-e",
        "NOTION_API_KEY",
        "-e",
        "NOTION_PARENT_ID",
        "notion-mcp-server/v2"
      ],
      "env": {
        "NOTION_API_KEY": "${NOTION_API_KEY}",
        "NOTION_PARENT_ID": "${NOTION_PARENT_ID}"
      }
    }
  }
}
